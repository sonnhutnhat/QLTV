<%- include ('../partials/header.ejs') %>
    <style>
        /* login.css */

        html,
        body {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            overflow-x: hidden;
            /* Disable horizontal scrolling */
        }

        /* Ensure the container takes the full height of the viewport */
        body {
            background-color: #ffffff;
            color: #333333;
            font-family: 'Roboto', sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            width: 100%;
            max-width: 100vw;
            /* Ensure it doesn't exceed the viewport width */
        }

        .login-card {
            background-color: #ffffff;
            border-radius: 10px;
            padding: 40px;
            margin-bottom: 80px;
            width: 100%;
            max-width: 450px;
            box-sizing: border-box;
            /* Ensure padding is included in width */
        }

        .login-card h4 {
            text-align: center;
        }

        .login-card h2 {
            text-align: center;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            padding: 8px;
            border-radius: 5px;
            border: 1px solid #333;
            background-color: #fff;
            color: #333;
            box-sizing: border-box;
            /* Include padding in width calculation */
        }

        .form-control::placeholder {
            color: #888;
        }

        .login-btn {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #4a90e2;
            color: #ffffff;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .login-btn:hover {
            background-color: #357ab8;
        }

        .login-links {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .login-links a {
            color: #4a90e2;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .login-links a:hover {
            color: #357ab8;
        }
    </style>
    </head>

    <body>
        <div class="login-container">
            <div class="login-card">
                <h4>User Login</h4>
                <form class="p-3" action="/auth/user/login" method="POST">
                    <div class="form-group">
                        <label class="form-control-label">Username</label>
                        <input type="text" name="username" placeholder="Username" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label class="form-control-label">Password</label>
                        <input type="password" name="password" placeholder="Password" class="form-control" required />
                    </div>

                    <p> Chưa có tài khoản? <a class="nav-link" href="/auth/user/signup"> Đăng ký </a> </p>

                    <button type="submit" class="login-btn">Login!</button>
                </form>
            </div>
        </div>
        <%- include ('../partials/footer.ejs') %>
    </body>